{{!-- TODO: remove loginEnabled check when login is enabled on production --}}
{{#if (and editing loginEnabled)}}
  {{textarea rows=rows class="form-control" keyDown=(action 'submit') value=updated}}
  <span {{action 'cancel'}}>{{fa-icon 'times'}}</span>
{{else}}
  <span class="{{if (not loginEnabled) 'text-display'}}">
    {{#if changed}}
      <i>{{updated}}</i>
    {{else}}
        {{#if text}}
            {{text}}
        {{else if loginEnabled}}
            <i>Add information</i>
        {{/if}}
    {{/if}}
  </span>
{{/if}}
