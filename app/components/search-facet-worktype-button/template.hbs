<div class='type-filter-option {{if selected 'active'}}'>
    {{#if selected}}
        <i class='fa fa-times icon clickable' {{action 'click'}}></i>
    {{/if}}
    <a class='clickable' {{action 'click'}}>{{label}}</a>
    {{#if collapsible}}
        <i class='fa expand-icon clickable {{if toggleState 'fa-plus' 'fa-minus'}}' {{action 'toggleBody'}}></i>
    {{/if}}
</div>
