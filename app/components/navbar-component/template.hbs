<div class='navbar'>
    <img class='navbar-logo' height='35px' width='auto' src='assets/images/nav_logo.png'>
    {{#if session.isAuthenticated}}
        <span class="hello-text">Hello{{#if userName}}, {{userName}}{{/if}}! (<a {{action 'logout'}}>Logout</a>)</span>
        <img class='img-circle gravatar' src={{gravatarSrc}}>
        {{link-to 'Changes' 'changes' class='nav-link'}}
    {{else}}
        <button class='btn btn-info log-button' {{action 'login'}}>Login</button>
    {{/if}}
    {{link-to 'Discover' 'discover' class='nav-link'}}
</div>
