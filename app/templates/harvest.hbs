{{outlet}}
	{{search-header}}
	<div onload= "loadPage" class="masthead">
		<h1 align="center" class="text-muted" style= "font-size:5rem; font-family:courier;">SHARE HARVESTER STATUS BOARD</h1>
	</div>


<div>
<style>
table, th, td {
		padding: 3rem;
		padding-top: 2rem;
		border-bottom: solid #d9d9d9;
}
th {
	font-family:Courier;
	font-size: 3rem;
	color: #0099ff;
	padding-bottom: 2px;
}
td{
	font-family:courier;
	font-size: 2rem;

}
</style>
	<table style="width:99%" align="center" class="table">
	  <tr>
	    <th>STATUS</th>
	    <th>NAME</th>
	    <th>DATE</th>
			<th>ID</th>
			<th>DESCRIPTION</th>
	  </tr>
		{{#each harvests as |harvest|}}
	  <tr>
	   	<td>Symbol</td>
	    <td>{{harvest.type}}</td>
	    <td>{{harvest.attributes.startDate}}</td>
			<td>{{harvest.id}}</td>
			<td>
			 {{#if (equals harvest.attributes.status 0)}}
				 <span>Created</span>
			 {{/if}}

			 {{#if (equals harvest.attributes.status 1)}}
				 <span>Started</span>
			 {{/if}}

			 {{#if (equals harvest.attributes.status 2)}}
				 <span>Failed</span>
			 {{/if}}

			 {{#if (equals harvest.attributes.status 3)}}
				 <span>Succeded</span>
			 {{/if}}

			 {{#if (equals harvest.attributes.status 4)}}
				 <span>Rescheduled</span>
			 {{/if}}

			 {{#if (equals harvest.attributes.status 6)}}
				 <span>Forced</span>
			 {{/if}}

			 {{#if (equals harvest.attributes.status 7)}}
				 <span>Skipped</span>
			 {{/if}}

			 {{#if (equals harvest.attributes.status 8)}}
				 <span>Retried</span>
			 {{/if}}
		 </td>
	  </tr>
		{{/each}}
	</table>
</div>
