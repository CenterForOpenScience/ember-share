<div class="container">
    <div>
        <img height="20%" width="20%" style="display:block; margin-left:auto; margin-right:auto" src='assets/images/main_logo.png'>
    </div>
    <div class="text-muted text-center"><small>Notice: this is a public beta release</small></div>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <div class="row">
                <div class="col-xs-11">
                  {{input class="form-control" value=searchString key-up='typing' placeholder='search'}}
                </div>
                <div class="col-xs-1">
                    <a style="margin-left: -20px" href="" {{action 'search'}}>
                        <i style="font-size: 150%; margin-top: 5px" class="fa fa-search"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="text-muted text-center"><small>{{numberOfEvents}} events as of {{eventsLastUpdated}}</small></div>
    <hr>
    <div class="row">
        <div class="text-center">
            <strong>{{numberOfProviders}} Content Providers</strong>
        </div>
    </div>
    <br>
    <div class="row">
        {{#each providers as |provider index|}}
            {{#if (modIf index 2)}}
                <div class="row">
                    {{provider-block provider=provider}}
                </div>
            {{else}}
                {{provider-block provider=provider}}
            {{/if}}
        {{/each}}
    </div>

    <br>
</div>

