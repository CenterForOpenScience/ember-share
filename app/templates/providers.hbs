<div class="container">
    <div>
        <img height="20%" width="20%" style="display:block; margin-left:auto; margin-right:auto" src='assets/images/main_logo.png'>
    </div>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <div class="row">
                <div class="col-xs-11">
                  {{input class="form-control" value=searchString key-up='typing'}}
                </div>
                <div class="col-xs-1">
                    <a style="margin-left: -20px" href="" {{action 'search'}}>
                        <i style="font-size: 150%; margin-top: 5px" class="fa fa-search"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="text-center">
            {{numberOfProviders}} Content Providers
        </div>
    </div>
    <div class="row">
        {{#each providers as |provider|}}
            {{provider-block provider=provider}}
        {{/each}}
    </div>

    <br>
</div>

