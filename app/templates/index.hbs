<div class="index-search-section">
    <div class="container">
        <div class="index-jumbo row">
            <div class="col-xs-12">
                <div>
                    <img class="index-background" src='assets/images/main_logo.png'>
                </div>

                    <div class="row index-search-row">
                        <div class="col-xs-offset-1 col-xs-10" id="index-row">
                            {{input class="form-control" enter='search' value=searchString placeholder=placeholder }}
                        </div>
                        <div class="col-xs-1 index-search-icon">
                            <a href="" {{action 'search'}}>
                                <i style="font-size: 150%; margin-top: 5px" class="fa fa-search"></i>
                            </a>
                        </div>
                    </div>
                    <br>
                    <div class="row" id="index-row">
                        {{#link-to "discover" class="index-advanced"}}Advanced Search{{/link-to}}
                    </div>

                    <div class="row" id="index-tile-row">
                        <div class=" index-tile col-lg-4">
                            {{#link-to 'discover' (query-params type="publication") class="index-filter" invokeAction=(action 'track' 'publication')}}
                                {{ homepage-button-box label='PUBLICATIONS' icon='fa fa-book' }}
                            {{/link-to}}
                        </div>
                        <div class="index-tile col-lg-4">
                            {{#link-to 'discover' (query-params type="preprint") class="index-filter" invokeAction=(action 'track' 'preprint')}}
                                {{ homepage-button-box label='PREPRINTS' icon='fa fa-file-text' }}
                            {{/link-to}}
                        </div>
                        <div class="index-tile col-lg-4">
                            {{#link-to 'sources' class="index-filter" invokeAction=(action 'track' 'sources')}}
                                {{ homepage-button-box label='SOURCES' icon='fa fa-university'}}
                            {{/link-to}}
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>

