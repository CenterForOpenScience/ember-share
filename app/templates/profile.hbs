<div class="container">
    <br>
    <br>
    <div class="row">
        <div class="col-md-12">
            <div class="input-group">
                <span class="input-group-addon">OAuth2 Token</span>
                <input type="text" class="form-control" value={{session.data.authenticated.user.token}} readonly>
            </div>
        </div>
    </div>
    {{#if model}}
        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-12">
                        <h2>Your provider registration requests</h2>
                    </div>
                </div>
                {{#each model as |registration|}}
                    <div class="row">
                        <div class="col-xs-12">
                            <strong>Status: </strong><span>{{status registration.status}}</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <strong>Source name: </strong><span>{{registration.sourceName}}</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <strong>Date submitted: </strong>
                            <span>{{moment-format registration.submitted_at 'MMM D, YYYY' 'YYYY-MM-DDTHH:mm:ssZ'}}</span>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/if}}
    {{outlet}}
</div>
